<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EmployeeGest.Contact">
    <ContentPage.Content >
        <StackLayout   VerticalOptions="Start">
            <Label Margin="0,20,0,10" Text="Contact All Employees" FontAttributes="Bold" FontSize="Large" TextColor="{ StaticResource PrimaryColor}" HorizontalTextAlignment="Center" ></Label>
            
            <Entry x:Name="txtSubject" Placeholder="Subject"></Entry>
            <Editor x:Name="txtBody" Placeholder="Your message here" HeightRequest="200" ></Editor>
            <Button x:Name="btnSend" Text="Send" Clicked="btnSend_Clicked" />
            <Label x:Name="messResult" Margin="0,20,0,10" Text="" FontAttributes="Bold" FontSize="Small" TextColor="{ StaticResource PrimaryColor}" HorizontalTextAlignment="Center" ></Label>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>